@{
    ViewBag.Title = "Test Two-Factor Authentication";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <form action="@Url.Action("Enable2FA","Account")" method="post" class="form-horizontal" role="form">
            <div class="form-group col-md-3">
                <input type="submit" value="Enable 2FA" class="btn btn-default" />
            </div>
        </form>
        <form action="@Url.Action("VerifyCode","Account")" method="post" class="form-horizontal" role="form">
            <div class="form-group col-md-3">
                    <input type="submit" value="Verify code" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}