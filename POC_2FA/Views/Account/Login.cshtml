@{
    ViewBag.Title = "Test Two-Factor Authentication";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <form action="@Url.Action("Login","Account")" method="post" class="form-horizontal" role="form">
            <div class="form-group">
                <label for="email" class="col-md-2 control-label">Email</label>
                <div class="col-md-10">
                    <input name="email" type="text" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-md-2 control-label">Password</label>
                <div class="col-md-10">
                    <input name="password" type="password" class="form-control" />
                </div>
            </div>
            <h4 class="text-danger">@ViewBag.Message</h4>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Log in" class="btn btn-default" />
                </div>
            </div>
        </form>

        <hr />
        <h4>For the tests use the credentials:</h4>
        <h4><strong>email: </strong>test01@gmail.com</h4>
        <h4><strong>password: </strong>test01</h4>
        <h4>or</h4>
        <h4><strong>email: </strong>test02@gmail.com</h4>
        <h4><strong>password: </strong>test02</h4>
</div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}